@page "/"
@inject Services.IRecipeService RecipeService
@inject NavigationManager NavigationManager
@using ODBlazorApp.Models

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="jumbotron p-5 rounded" style="background: linear-gradient(135deg, #ff6b6b, #4ecdc4);">
                <h1 class="display-4 text-white fw-bold">
                    <i class="bi bi-egg-fried me-2"></i>RecipeMaster
                </h1>
                <p class="lead text-white">Découvrez, gérez et créez vos recettes préférées</p>
                <a href="/add-recipe" class="btn btn-light btn-lg mt-3">
                    <i class="bi bi-plus-circle me-1"></i>Créer une recette
                </a>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="input-group">
                        <input type="text" class="form-control form-control-lg"
                               placeholder="Rechercher une recette..."
                               @bind="searchQuery"
                               @bind:event="oninput" />
                        <button class="btn btn-primary btn-lg" @onclick="Search">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="row">
                        <div class="col-6">
                            <div class="p-3">
                                <i class="bi bi-journal-bookmark-fill fs-1 text-primary"></i>
                                <h3 class="mt-2">@recipeCount</h3>
                                <small class="text-muted">Recettes</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3">
                                <i class="bi bi-tags-fill fs-1" style="color: #9c27b0;"></i>
                                <h3 class="mt-2">@categoriesCount</h3>
                                <small class="text-muted">Catégories</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h3 class="mb-3">
                <i class="bi bi-filter me-2"></i>Filtrer par catégorie
            </h3>
            <div class="d-flex flex-wrap gap-2">
                <button class="btn @(selectedCategory == null ? "btn-primary" : "btn-outline-primary")"
                        @onclick="() => FilterByCategory(null)">
                    Toutes
                </button>
                @foreach (var category in categories)
                {
                    <button class="btn @(selectedCategory == category ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => FilterByCategory(category)">
                        @category
                    </button>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3>
                    <i class="bi bi-collection me-2"></i>
                    @(selectedCategory == null ? "Toutes les recettes" : $"Recettes - {selectedCategory}")
                </h3>
                <a href="/add-recipe" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i>Nouvelle recette
                </a>
            </div>

            @if (recipes.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var recipe in recipes)
                    {
                        <RecipeCard Recipe="recipe" />
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-emoji-frown fs-1 text-muted"></i>
                    <h4 class="mt-3">Aucune recette trouvée</h4>
                    <p class="text-muted">Essayez de modifier vos critères de recherche ou créez une nouvelle recette.</p>
                    <a href="/add-recipe" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Créer une recette
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<Recipe> recipes = new();
    private List<string> categories = new();
    private string searchQuery = string.Empty;
    private string? selectedCategory = null;
    private int recipeCount = 0;
    private int categoriesCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        recipes = await RecipeService.SearchRecipesAsync(searchQuery, selectedCategory);
        categories = await RecipeService.GetCategoriesAsync();
        recipeCount = recipes.Count;
        categoriesCount = categories.Count;
    }

    private async Task Search()
    {
        await LoadData();
    }

    private async Task FilterByCategory(string? category)
    {
        selectedCategory = category;
        await LoadData();
    }
}