@page "/add-recipe"
@inject Services.IRecipeService RecipeService
@using ODBlazorApp.Models
@inject NavigationManager NavigationManager

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6 fw-bold text-primary">
                    <i class="bi bi-plus-circle me-2"></i>Nouvelle recette
                </h1>
                <a href="/" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>Annuler
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-card-text me-2"></i>Informations principales</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="@newRecipe" OnValidSubmit="@HandleSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <div class="row g-3">
                            <div class="col-md-8">
                                <div class="form-floating">
                                    <InputText id="title" class="form-control" @bind-Value="newRecipe.Title" />
                                    <label for="title">Titre de la recette *</label>
                                    <ValidationMessage For="@(() => newRecipe.Title)" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <InputSelect id="category" class="form-select" @bind-Value="newRecipe.Category">
                                        <option value="">Choisir une catégorie</option>
                                        @foreach (var category in RecipeService.GetCategories())
                                        {
                                            <option value="@category">@category</option>
                                        }
                                        <option value="Autre">Autre</option>
                                    </InputSelect>
                                    <label for="category">Catégorie *</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <InputTextArea id="description" class="form-control"
                                                   @bind-Value="newRecipe.Description"
                                                   style="height: 100px;" />
                                    <label for="description">Description</label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <InputNumber id="prepTime" class="form-control"
                                                 @bind-Value="newRecipe.PreparationTime" />
                                    <label for="prepTime">Temps préparation (min) *</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <InputNumber id="cookTime" class="form-control"
                                                 @bind-Value="newRecipe.CookingTime" />
                                    <label for="cookTime">Temps cuisson (min)</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <InputSelect id="difficulty" class="form-select"
                                                 @bind-Value="newRecipe.Difficulty">
                                        @foreach (var difficulty in Enum.GetValues<DifficultyLevel>())
                                        {
                                            <option value="@difficulty">@difficulty</option>
                                        }
                                    </InputSelect>
                                    <label for="difficulty">Difficulté</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <InputNumber id="servings" class="form-control"
                                                 @bind-Value="newRecipe.Servings" />
                                    <label for="servings">Nombre de personnes *</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <InputText id="imageUrl" class="form-control"
                                               @bind-Value="newRecipe.ImageUrl" />
                                    <label for="imageUrl">URL de l'image</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <InputText id="tags" class="form-control"
                                               @bind-Value="tagsInput" />
                                    <label for="tags">Tags (séparés par des virgules)</label>
                                </div>
                            </div>
                        </div>
                    </EditForm>
                </div>
            </div>

            <!-- Ingrédients -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Ingrédients</h5>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < newRecipe.Ingredients.Count; i++)
                    {
                        var index = i;
                        <div class="row g-2 mb-3 align-items-center">
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="Nom"
                                       @bind="newRecipe.Ingredients[index].Name" />
                            </div>
                            <div class="col-md-2">
                                <input type="number" class="form-control" placeholder="Qté"
                                       @bind="newRecipe.Ingredients[index].Quantity" />
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" @bind="newRecipe.Ingredients[index].Unit">
                                    <option value="">Unité</option>
                                    <option value="g">g</option>
                                    <option value="kg">kg</option>
                                    <option value="ml">ml</option>
                                    <option value="L">L</option>
                                    <option value="c.à.s">c.à.s</option>
                                    <option value="c.à.c">c.à.c</option>
                                    <option value="pincée">pincée</option>
                                    <option value="unité">unité</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" placeholder="Notes"
                                       @bind="newRecipe.Ingredients[index].Notes" />
                            </div>
                            <div class="col-md-1">
                                <button type="button" class="btn btn-danger btn-sm"
                                        @onclick="() => RemoveIngredient(index)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    }

                    <button type="button" class="btn btn-outline-success" @onclick="AddIngredient">
                        <i class="bi bi-plus-circle me-1"></i>Ajouter un ingrédient
                    </button>
                </div>
            </div>

            <!-- Étapes -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-list-ol me-2"></i>Étapes de préparation</h5>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < newRecipe.Steps.Count; i++)
                    {
                        <div class="mb-3">
                            <label class="form-label">Étape @(i + 1)</label>
                            <textarea class="form-control" rows="3"
                                      @bind="newRecipe.Steps[i]"></textarea>
                            <div class="mt-2 text-end">
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        @onclick="() => RemoveStep(i)">
                                    <i class="bi bi-trash me-1"></i>Supprimer
                                </button>
                            </div>
                        </div>
                    }

                    <button type="button" class="btn btn-outline-warning" @onclick="AddStep">
                        <i class="bi bi-plus-circle me-1"></i>Ajouter une étape
                    </button>
                </div>
            </div>

            <!-- Boutons d'action -->
            <div class="d-flex justify-content-between">
                <button type="button" class="btn btn-outline-secondary" @onclick="ResetForm">
                    <i class="bi bi-arrow-clockwise me-1"></i>Réinitialiser
                </button>
                <button type="button" class="btn btn-primary" @onclick="HandleSubmit">
                    <i class="bi bi-check-circle me-1"></i>Enregistrer la recette
                </button>
            </div>
        </div>

        <!-- Aperçu -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 20px;">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-eye me-2"></i>Aperçu</h5>
                    </div>
                    <div class="card-body">
                        @if (string.IsNullOrEmpty(newRecipe.Title))
                        {
                            <div class="text-center text-muted py-5">
                                <i class="bi bi-card-text fs-1"></i>
                                <p class="mt-3">Commencez à remplir le formulaire pour voir l'aperçu</p>
                            </div>
                        }
                        else
                        {
                            <h4>@newRecipe.Title</h4>
                            <p class="text-muted">@newRecipe.Description</p>

                            <div class="d-flex gap-3 mb-3">
                                <span class="badge bg-primary">@newRecipe.Category</span>
                                <span class="badge @GetDifficultyBadgeClass()">@newRecipe.Difficulty</span>
                            </div>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Préparation</small>
                                    <div><i class="bi bi-clock me-1"></i>@newRecipe.PreparationTime min</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Cuisson</small>
                                    <div><i class="bi bi-fire me-1"></i>@newRecipe.CookingTime min</div>
                                </div>
                            </div>

                            @if (newRecipe.Ingredients.Any())
                            {
                                <div class="mb-3">
                                    <small class="text-muted">Ingrédients (@newRecipe.Ingredients.Count)</small>
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var ingredient in newRecipe.Ingredients.Take(3))
                                        {
                                            <li class="small">• @ingredient.Quantity @ingredient.Unit @ingredient.Name</li>
                                        }
                                        @if (newRecipe.Ingredients.Count > 3)
                                        {
                                            <li class="small text-muted">... et @(newRecipe.Ingredients.Count - 3) autres</li>
                                        }
                                    </ul>
                                </div>
                            }

                            @if (newRecipe.Steps.Any())
                            {
                                <div>
                                    <small class="text-muted">Étapes (@newRecipe.Steps.Count)</small>
                                    <div class="small text-muted">@newRecipe.Steps.First().Substring(0, Math.Min(50, newRecipe.Steps.First().Length))...</div>
                                </div>
                            }
                        }
                    </div>
                </div>

                <!-- Astuces -->
                <div class="card border-0 shadow-sm mt-3">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-lightbulb me-2"></i>Astuces</h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled small">
                            <li class="mb-2">✓ Utilisez des descriptions courtes et précises</li>
                            <li class="mb-2">✓ Ajoutez des tags pour faciliter la recherche</li>
                            <li class="mb-2">✓ Indiquez les temps exacts de préparation</li>
                            <li>✓ Décrivez les étapes dans l'ordre chronologique</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private Recipe newRecipe = new();
    private string tagsInput = string.Empty;

    protected override void OnInitialized()
    {
        // Initialiser avec un ingrédient et une étape vides
        AddIngredient();
        AddStep();
    }

    private void AddIngredient()
    {
        newRecipe.Ingredients.Add(new Ingredient());
    }

    private void RemoveIngredient(int index)
    {
        if (newRecipe.Ingredients.Count > 1)
        {
            newRecipe.Ingredients.RemoveAt(index);
        }
    }

    private void AddStep()
    {
        newRecipe.Steps.Add(string.Empty);
    }

    private void RemoveStep(int index)
    {
        if (newRecipe.Steps.Count > 1)
        {
            newRecipe.Steps.RemoveAt(index);
        }
    }

    private void HandleSubmit()
    {
        // Gérer les tags
        if (!string.IsNullOrWhiteSpace(tagsInput))
        {
            newRecipe.Tags = tagsInput.Split(',')
                .Select(t => t.Trim())
                .Where(t => !string.IsNullOrWhiteSpace(t))
                .ToList();
        }

        // Validation
        if (string.IsNullOrWhiteSpace(newRecipe.Title))
        {
            // Afficher erreur
            return;
        }

        RecipeService.AddRecipe(newRecipe);
        NavigationManager.NavigateTo($"/recipe/{newRecipe.Id}");
    }

    private void ResetForm()
    {
        newRecipe = new Recipe();
        tagsInput = string.Empty;
        newRecipe.Ingredients.Clear();
        newRecipe.Steps.Clear();
        AddIngredient();
        AddStep();
    }

    private string GetDifficultyBadgeClass()
    {
        return newRecipe.Difficulty switch
        {
            DifficultyLevel.Facile => "bg-success",
            DifficultyLevel.Moyen => "bg-warning",
            DifficultyLevel.Difficile => "bg-danger",
            _ => "bg-secondary"
        };
    }
}