@page "/add-recipe"
@inject Services.IRecipeService RecipeService
@inject NavigationManager NavigationManager
@using ODBlazorApp.Models
@using System.Linq

<EditForm Model="@newRecipe" OnValidSubmit="@HandleSubmit" FormName="addRecipeForm" class="container mt-4">
    <DataAnnotationsValidator />
    <ValidationSummary class="alert alert-danger" />

    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="display-6 fw-bold text-primary">
                    <i class="bi bi-plus-circle me-2"></i>Nouvelle recette
                </h1>
                <div>
                    <button type="button" class="btn btn-outline-secondary me-2" @onclick="Cancel">
                        <i class="bi bi-x-circle me-1"></i>Annuler
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Enregistrer
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-card-text me-2"></i>Informations principales</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <div class="form-floating mb-3">
                                <InputText id="title" class="form-control" @bind-Value="newRecipe.Title" />
                                <label for="title">Titre de la recette *</label>
                                <ValidationMessage For="@(() => newRecipe.Title)" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <InputSelect id="category" class="form-select" @bind-Value="newRecipe.Category">
                                    <option value="">Choisir une catégorie</option>
                                    @if (availableCategories != null)
                                    {
                                        @foreach (var category in availableCategories)
                                        {
                                            <option value="@category">@category</option>
                                        }
                                    }
                                    <option value="Autre">Autre</option>
                                </InputSelect>
                                <label for="category">Catégorie *</label>
                                <ValidationMessage For="@(() => newRecipe.Category)" />
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <InputTextArea id="description" class="form-control"
                                               @bind-Value="newRecipe.Description"
                                               style="height: 100px;" />
                                <label for="description">Description</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <InputNumber id="prepTime" class="form-control"
                                             @bind-Value="newRecipe.PreparationTime" />
                                <label for="prepTime">Temps préparation (min) *</label>
                                <ValidationMessage For="@(() => newRecipe.PreparationTime)" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <InputNumber id="cookTime" class="form-control"
                                             @bind-Value="newRecipe.CookingTime" />
                                <label for="cookTime">Temps cuisson (min)</label>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                <InputSelect id="difficulty" class="form-select"
                                             @bind-Value="newRecipe.Difficulty">
                                    <option value="Facile">Facile</option>
                                    <option value="Moyen">Moyen</option>
                                    <option value="Difficile">Difficile</option>
                                </InputSelect>
                                <label for="difficulty">Difficulté</label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <InputNumber id="servings" class="form-control"
                                             @bind-Value="newRecipe.Servings" />
                                <label for="servings">Nombre de personnes *</label>
                                <ValidationMessage For="@(() => newRecipe.Servings)" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <InputText id="imageUrl" class="form-control"
                                           @bind-Value="newRecipe.ImageUrl" />
                                <label for="imageUrl">URL de l'image</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ingrédients -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Ingrédients</h5>
                        <button type="button" class="btn btn-light btn-sm" @onclick="AddIngredient">
                            <i class="bi bi-plus"></i> Ajouter
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < newRecipe.Ingredients.Count; i++)
                    {
                        var index = i;
                        <div class="row g-2 mb-3 align-items-center">
                            <div class="col-md-5">
                                <div class="form-floating">
                                    <InputText id="@($"ingredient-name-{index}")"
                                               class="form-control"
                                               placeholder="Nom de l'ingrédient"
                                               @bind-Value="newRecipe.Ingredients[index].Name" />
                                    <label for="@($"ingredient-name-{index}")">Nom</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-floating">
                                    <InputNumber id="@($"ingredient-quantity-{index}")"
                                                 class="form-control"
                                                 placeholder="Quantité"
                                                 @bind-Value="newRecipe.Ingredients[index].Quantity" />
                                    <label for="@($"ingredient-quantity-{index}")">Qté</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-floating">
                                    <InputSelect id="@($"ingredient-unit-{index}")"
                                                 class="form-select"
                                                 @bind-Value="newRecipe.Ingredients[index].Unit">
                                        <option value="">Unité</option>
                                        <option value="g">g</option>
                                        <option value="kg">kg</option>
                                        <option value="ml">ml</option>
                                        <option value="L">L</option>
                                        <option value="c.à.s">c.à.s</option>
                                        <option value="c.à.c">c.à.c</option>
                                        <option value="pincée">pincée</option>
                                        <option value="unité">unité</option>
                                    </InputSelect>
                                    <label for="@($"ingredient-unit-{index}")">Unité</label>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-floating">
                                    <InputText id="@($"ingredient-notes-{index}")"
                                               class="form-control"
                                               placeholder="Notes"
                                               @bind-Value="newRecipe.Ingredients[index].Notes" />
                                    <label for="@($"ingredient-notes-{index}")">Notes</label>
                                </div>
                            </div>
                            <div class="col-md-1">
                                @if (newRecipe.Ingredients.Count > 1)
                                {
                                    <button type="button" class="btn btn-danger btn-sm mt-2"
                                            @onclick="() => RemoveIngredient(index)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Étapes -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-list-ol me-2"></i>Étapes de préparation</h5>
                        <button type="button" class="btn btn-light btn-sm" @onclick="AddStep">
                            <i class="bi bi-plus"></i> Ajouter
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < newRecipe.Steps.Count; i++)
                    {
                        var step = newRecipe.Steps[i];
                        <div class="mb-3">
                            <label class="form-label fw-bold">Étape @(i + 1)</label>
                            <div class="input-group">
                                <div class="form-floating flex-grow-1">
                                    <InputTextArea id="@($"step-{i}")"
                                                   class="form-control"
                                                   rows="2"
                                                   @bind-Value="step.Description"
                                                   placeholder="Description de l'étape" />
                                    <label for="@($"step-{i}")">Description</label>
                                </div>
                                @if (newRecipe.Steps.Count > 1)
                                {
                                    <button type="button" class="btn btn-outline-danger ms-2 align-self-start"
                                            @onclick="() => RemoveStep(i)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Tags et aperçu -->
        <div class="col-lg-4">
            <div class="sticky-top" style="top: 20px;">
                <!-- Tags -->
                <div class="card shadow-sm mb-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-tags me-2"></i>Tags</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-floating mb-3">
                            <InputText id="tagsInput"
                                       class="form-control"
                                       placeholder="Séparés par des virgules"
                                       @bind-Value="tagsInput" />
                            <label for="tagsInput">Tags (séparés par des virgules)</label>
                        </div>
                        @if (currentTags.Any())
                        {
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var tag in currentTags)
                                {
                                    <span class="badge bg-primary">@tag</span>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Aperçu -->
                <div class="card shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-eye me-2"></i>Aperçu</h5>
                    </div>
                    <div class="card-body">
                        @if (string.IsNullOrEmpty(newRecipe.Title))
                        {
                            <div class="text-center text-muted py-3">
                                <i class="bi bi-card-text fs-1"></i>
                                <p class="mt-2">Remplissez le formulaire pour voir l'aperçu</p>
                            </div>
                        }
                        else
                        {
                            <h5>@newRecipe.Title</h5>
                            <p class="text-muted small">@newRecipe.Description</p>

                            <div class="d-flex gap-2 mb-3">
                                <span class="badge bg-primary">@newRecipe.Category</span>
                                <span class="badge @GetDifficultyBadgeClass()">@newRecipe.Difficulty</span>
                            </div>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Préparation</small>
                                    <div><i class="bi bi-clock me-1"></i>@newRecipe.PreparationTime min</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Cuisson</small>
                                    <div><i class="bi bi-fire me-1"></i>@newRecipe.CookingTime min</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@code {
    private Recipe newRecipe = new();
    private List<string>? availableCategories;
    private string tagsInput = string.Empty;
    private List<string> currentTags = new();

    protected override async Task OnInitializedAsync()
    {
        availableCategories = await RecipeService.GetCategoriesAsync();
        // Initialiser avec un ingrédient et une étape
        AddIngredient();
        AddStep();
    }

    private void AddIngredient()
    {
        newRecipe.Ingredients.Add(new Ingredient());
    }

    private void RemoveIngredient(int index)
    {
        if (newRecipe.Ingredients.Count > 1)
        {
            newRecipe.Ingredients.RemoveAt(index);
        }
    }

    private void AddStep()
    {
        newRecipe.Steps.Add(new RecipeStep { StepNumber = newRecipe.Steps.Count + 1 });
    }

    private void RemoveStep(int index)
    {
        if (newRecipe.Steps.Count > 1)
        {
            newRecipe.Steps.RemoveAt(index);
            // Reorganiser les numéros d'étapes
            for (int i = 0; i < newRecipe.Steps.Count; i++)
            {
                newRecipe.Steps[i].StepNumber = i + 1;
            }
        }
    }

    private async Task HandleSubmit()
    {
        // NETTOYER les ingrédients vides
        newRecipe.Ingredients = newRecipe.Ingredients
            .Where(i => !string.IsNullOrWhiteSpace(i.Name) || i.Quantity > 0)
            .ToList();

        // NETTOYER les étapes vides
        newRecipe.Steps = newRecipe.Steps
            .Where(s => !string.IsNullOrWhiteSpace(s.Description))
            .ToList();

        // Réorganiser les numéros d'étapes après nettoyage
        for (int i = 0; i < newRecipe.Steps.Count; i++)
        {
            newRecipe.Steps[i].StepNumber = i + 1;
        }

        // Gérer les tags
        if (!string.IsNullOrWhiteSpace(tagsInput))
        {
            newRecipe.Tags = tagsInput.Split(',')
                .Select(t => t.Trim())
                .Where(t => !string.IsNullOrWhiteSpace(t))
                .Select(t => new Tag { Name = t })
                .ToList();
        }

        try
        {
            await RecipeService.AddRecipeAsync(newRecipe);
            NavigationManager.NavigateTo("/");
        }
        catch (Exception ex)
        {
            // Gérer l'erreur
            Console.WriteLine($"Erreur: {ex.Message}");
        }
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }

    private string GetDifficultyBadgeClass()
    {
        return newRecipe.Difficulty switch
        {
            DifficultyLevel.Facile => "bg-success",
            DifficultyLevel.Moyen => "bg-warning",
            DifficultyLevel.Difficile => "bg-danger",
            _ => "bg-secondary"
        };
    }
}