@using ODBlazorApp.Models

<div class="col">
    <div class="card recipe-card h-100">
        <div class="card-img-top position-relative" style="height: 200px; overflow: hidden;">
            <img src="@Recipe.ImageUrl"
                 alt="@Recipe.Title"
                 class="w-100 h-100 object-fit-cover"
                 onerror="this.src='/images/default-recipe.jpg'" />
            <span class="position-absolute top-0 end-0 m-2 badge @GetDifficultyBadgeClass()">
                @Recipe.Difficulty
            </span>
            <div class="position-absolute bottom-0 start-0 w-100 p-3"
                 style="background: linear-gradient(transparent, rgba(0,0,0,0.7));">
                <h5 class="card-title text-white mb-0">@Recipe.Title</h5>
            </div>
        </div>

        <div class="card-body">
            <p class="card-text text-muted small">@Recipe.Description</p>

            <div class="d-flex justify-content-between mb-3">
                <div class="text-center">
                    <i class="bi bi-clock text-primary"></i>
                    <div class="small">@Recipe.PreparationTime min</div>
                </div>
                <div class="text-center">
                    <i class="bi bi-fire text-danger"></i>
                    <div class="small">@Recipe.CookingTime min</div>
                </div>
                <div class="text-center">
                    <i class="bi bi-people-fill text-success"></i>
                    <div class="small">@Recipe.Servings pers.</div>
                </div>
            </div>

            <div class="mb-3">
                <span class="badge category-badge">@Recipe.Category</span>
                @foreach (var tag in Recipe.Tags.Take(2))
                {
                    <span class="badge bg-light text-dark border">@tag.Name</span>
                }
                @if (Recipe.Tags.Count > 2)
                {
                    <span class="badge bg-light text-dark border">+@(Recipe.Tags.Count - 2)</span>
                }
            </div>

            <div class="d-flex justify-content-between">
                <a href="/recipe/@Recipe.Id" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-eye me-1"></i>Voir
                </a>
                <a href="/edit-recipe/@Recipe.Id" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-pencil me-1"></i>Éditer
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Recipe Recipe { get; set; } = default!;

    private string GetDifficultyBadgeClass()
    {
        return Recipe.Difficulty switch
        {
            DifficultyLevel.Facile => "bg-success",
            DifficultyLevel.Moyen => "bg-warning",
            DifficultyLevel.Difficile => "bg-danger",
            _ => "bg-secondary"
        };
    }
}